<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FixUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#00539C</item>
        <item name="colorPrimaryDark">#003366</item>

        <!-- Text Colors -->
        <item name="android:textColor">#333333</item>
        <item name="android:windowBackground">#F5F5F5</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Notification Badge Style -->
    <style name="NotificationBadge" parent="Widget.AppCompat.TextView">
        <item name="android:background">#E53935</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>