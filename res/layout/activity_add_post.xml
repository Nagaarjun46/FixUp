<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_toolbar_background"
        android:elevation="4dp"
        app:title="Add My Post"
        app:titleTextColor="@color/colorSecondary"
        app:titleMarginStart="110dp"/>

    <EditText
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="Enter Title"
        android:inputType="text"
        android:minHeight="48dp"
        android:typeface="serif"
        android:padding="10dp" />

    <EditText
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_edittext_background"
        android:hint="Enter Description"
        android:inputType="textMultiLine"
        android:typeface="serif"
        android:minLines="4"
        android:padding="10dp" />

    <EditText
        android:id="@+id/post_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="Priority"
        android:inputType="text"
        android:minHeight="48dp"
        android:typeface="serif"
        android:padding="10dp" />

    <EditText
        android:id="@+id/post_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="City"
        android:inputType="text"
        android:minHeight="48dp"
        android:typeface="serif"
        android:padding="10dp" />

    <EditText
        android:id="@+id/post_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_edittext_background"
        android:hint="Area"
        android:inputType="text"
        android:minHeight="48dp"
        android:typeface="serif"
        android:padding="10dp" />
    <!--  Image Upload Button  -->
    <Button
        android:id="@+id/upload_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button_background"
        android:text="Upload Image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/upload_image_progress_bar"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorError"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/colorSuccess"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/volunteers_needed_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Volunteers Needed"
        android:background="@drawable/custom_edittext_background"
        android:inputType="number"
        android:minHeight="48dp"
        android:typeface="serif"
        android:padding="10dp" />

    <Button
        android:id="@+id/add_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button_background"
        android:text="Add Post"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/add_post_progress_bar"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorError"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/colorSuccess"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>